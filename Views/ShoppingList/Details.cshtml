@{
    ViewData["Title"] = "Shopping List";
}

@using System
@using System.Collections.Generic
@using FoodSaverClient.Models
@model List<Ingredient>

<h1>@ViewData["Title"]</h1>

<h2>Here is you're shopping list for the week:</h2>

<ul>
@foreach (Ingredient ingredient in Model)
{
    <li>@User.ServingMultiplier x @ingredient.IngredientQuantity @ingredient.IngredientName, $ @ingredient.IngredientPrice</li>
    
    (decimal ShoppingListTotal += @ingredient.IngredientPrice);
    
}
</ul>
<h2>The total cost of your shopping list is $ @ShoppingListTotal</h2>


